<?xml version="1.0" encoding="utf-8"?>
<LinearLayout   xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_500"
    tools:context=".gastos">

    <TextView
        android:id="@+id/txt_suma2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="" />

    <TextView
        android:id="@+id/txt_ingresos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:text="" />

    <Button
        android:id="@+id/pasarGrafica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="GRAFICAS" />

    <Button
        android:id="@+id/ingresar_gastos_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar Gasto"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="110dp"
            android:layout_height="31dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="    DINERO" />

        <TextView
            android:id="@+id/textView65"
            android:layout_width="94dp"
            android:layout_height="31dp"
            android:layout_weight="1"
            android:text="DESCRIP"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textView6"
            android:layout_width="110dp"
            android:layout_height="31dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text=" CATEGO" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="110dp"
            android:layout_height="31dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text=" FECHA" />
    </LinearLayout>

    <ListView
        android:id="@+id/gastos_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>